@model IEnumerable<SistemaFaculdade.Models.Curso>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Cursos</h2>
<hr />

<p>
    <a href='@Url.Action("Create", "Cursoes1")' class="btn btn-success center-block">Adicionar Novo Curso</a>
</p>
<table class="table table-hover table-bordered bg-warning">
    <tr>
        <th class="text-center">
            @Html.DisplayName("Descrição")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td class="text-center">
                <a href='@Url.Action("Details", "Cursoes1", new { id = item.IDCurso })' class="btn btn-primary">Detalhes</a>
                <a href='@Url.Action("Edit", "Cursoes1", new { id = item.IDCurso })' class="btn btn-warning right">Editar</a>
                <a href='@Url.Action("Delete", "Cursoes1", new { id = item.IDCurso })' class="btn btn-danger right">Excluir</a>
            </td>
        </tr>
    }

</table>
