@model IEnumerable<SistemaFaculdade.Models.Disciplina>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Disciplinas</h2>
<hr />

<p>
    <a href='@Url.Action("Create", "Disciplinas1")' class="btn btn-success center-block">Adicionar Nova Disciplina</a>
</p>
<table class="table table-hover table-bordered bg-warning">
    <tr>
        <th class="text-center">
            @Html.DisplayName("Descrição")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td class="text-center">
            <a href='@Url.Action("Details", "Disciplinas1", new { id = item.IDDisciplina })' class="btn btn-primary">Detalhes</a>
            <a href='@Url.Action("Edit", "Disciplinas1", new { id = item.IDDisciplina })' class="btn btn-warning">Editar</a>
            <a href='@Url.Action("Delete", "Disciplinas1", new { id = item.IDDisciplina })' class="btn btn-danger">Excluir</a>
        </td>
    </tr>
}

</table>
